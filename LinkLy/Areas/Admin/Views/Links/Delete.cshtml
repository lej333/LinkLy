@model Link

<div>
    <div class="float-left">
        <h2 class="text-info">Delete link</h2>
    </div>
    <div class="float-left ml-3 mt-1">
        <partial name="_BackButtonPartial" />
    </div>
    <div class="clearfix"></div>
</div>

<div class="border container bg-danger p-3 text-white" style="max-width: 500px;">
    <div class="">
        Are you sure to delete link <b>@Model.Name</b>? All information and click history will be erased and can't be restored!
    </div>
    <div class="mt-3 float-right">
        <a class="btn btn-outline-light" asp-action="Index">Oops, no!</a>
        <a class="btn btn-light" asp-action="DeleteConfirmed" asp-route-Id="@Model.Id">Yes, delete it!</a>
    </div>
    <div class="clearfix"></div>
</div>


